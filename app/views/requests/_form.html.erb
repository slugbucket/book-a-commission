<%= form_for(request) do |f| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Title* (max. 64 characters)" %>
    <%= f.text_field :title, :class => "required_field", :size => 32 %>
  </div>

  <div class="field">
    <%= f.label :fullname, "Full name*" %>
    <%= f.text_field :fullname, :class => "required_field" %>
  </div>

  <div class="field">
    <%= f.label :contact_address, "Email adddress*" %>
    <%= f.text_field :contact_address, :class => "required_field" %>
  </div>

  <div class="field">
    <%= f.label :commission_type_id, "Commission type*" %>
    <%= f.collection_select :commission_type_id, CommissionType.active().order(:name), :id, :name_how_long, {:selected => @request.commission_type_id,:prompt => 'Please select', :class => "required_field"} %><br />
  </div>

  <div class="field">
    <%= f.label :due_date, "Due date (click to display calendar)" %>
    <!-- %= f.date_select :due_date % -->
    <%= f.text_field :due_date, :id => "datepicker", :class => "required_field" %>
  </div>

  <div class="field">
    <%= f.label :comments %>
    <%= f.text_area :comments, :cols => 40, :rows => 8 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
