<p id="notice"><%= notice %></p>

<h1>Activity Teachings</h1>

<table>
  <thead>
    <tr>
      <th>Student name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_teachings.each do |activity_teaching| %>
      <tr>
        <td><%= activity_teaching.student_name %></td>
        <td><%= link_to 'Show', activity_teaching %></td>
        <td><%= link_to 'Edit', edit_activity_teaching_path(activity_teaching) %></td>
        <td><%= link_to 'Destroy', activity_teaching, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

