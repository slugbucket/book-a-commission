<p id="notice"><%= notice %></p>

<h1>Activity Writings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_writings.each do |activity_writing| %>
      <tr>
        <td><%= activity_writing.name %></td>
        <td><%= link_to 'Show', activity_writing %></td>
        <td><%= link_to 'Edit', edit_activity_writing_path(activity_writing) %></td>
        <td><%= link_to 'Destroy', activity_writing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

