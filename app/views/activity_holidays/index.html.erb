<p id="notice"><%= notice %></p>

<h1>Activity Holidays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_holidays.each do |activity_holiday| %>
      <tr>
        <td><%= activity_holiday.name %></td>
        <td><%= link_to 'Show', activity_holiday %></td>
        <td><%= link_to 'Edit', edit_activity_holiday_path(activity_holiday) %></td>
        <td><%= link_to 'Destroy', activity_holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

